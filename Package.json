{
  "name": "moral-dilemma-platform",
  "version": "2.0.0",
  "description": "A comprehensive platform for exploring moral dilemmas with advanced analytics and popularity tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed": "node scripts/seedData.js",
    "migrate": "node scripts/migrate.js",
    "update-metrics": "node scripts/updateMetrics.js",
    "backup": "node scripts/backup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-audit": "npm audit",
    "docker:build": "docker build -t moral-dilemma-platform .",
    "docker:run": "docker run -p 3000:3000 moral-dilemma-platform"
  },
  "keywords": [
    "moral-dilemmas",
    "ethics",
    "philosophy",
    "analytics",
    "express",
    "mongodb",
    "nodejs"
  ],
  "author": "Moral Dilemma Platform Team",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.5",
    "redis": "^5.7.0",
    "slugify": "^1.6.6",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hanan-bhatti/Moral-delimma.git"
  },
  "bugs": {
    "url": "https://github.com/hanan-bhatti/Moral-delimma/issues"
  },
  "homepage": "https://github.com/hanan-bhatti/Moral-delimma#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!scripts/**",
      "!public/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
